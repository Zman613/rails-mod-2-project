<% if flash[:messages]%>
  <h2><%= flash[:messages].join(", ") + "." %></h2>
<% end%>

<%= form_for :user, url: create_plan_path do |f| %>
  <%= f.label :goal %>
  <%= f.select :goal, options_for_select(['Lose Weight', 'Gain Weight', 'Gain Muscle']) %>
  <%= f.label :level, value='What level exercises?' %>
  <%= f.select :level, (['Beginner', 'Intermediate', 'Expert']) %>
  <br>
  <br>
  <%= f.label :goal_weight, value='What is your goal weight (in lbs)?' %>
  <%= f.number_field :goal_weight %>
  <br>
  <br>
  <%= f.label :active, value='How active are you?' %>
  <%= f.select :active, (
    [['Sedentary (little to no exercise + work a desk job)', 1.2],
    ['Lightly Active (light exercise 1-3 days / week)', 1.375],
    ['Moderately Active (moderate exercise 3-5 days / week)', 1.55],
    ['Very Active (heavy exercise 6-7 days / week)', 1.725],
    ['Extremely Active (very heavy exercise, hard labor job, training 2x / day)', 1.9]]
    ) %>
  <br>
  <br>
  <%= f.submit value='Submit' %>
<% end %>